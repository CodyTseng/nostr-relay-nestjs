{
  "name": "nostr-relay-nestjs",
  "version": "2.1.1",
  "description": "A high-performance nostr relay, using PostgreSQL",
  "author": "codytseng",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodyTseng/nostr-relay-nestjs"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d data-source",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d data-source",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint --max-warnings 0 \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/throttler": "^5.2.0",
    "@nestjs/websockets": "^10.3.10",
    "@nostr-relay/common": "^0.0.24",
    "@nostr-relay/core": "^0.0.24",
    "@nostr-relay/validator": "^0.0.24",
    "another-nestjs-ws-adapter": "^10.1.0",
    "hbs": "^4.2.0",
    "helmet": "^7.1.0",
    "kysely": "^0.27.4",
    "lodash": "^4.17.21",
    "meilisearch": "^0.41.0",
    "meilisearch-helper": "^1.2.0",
    "nestjs-pino": "^4.1.0",
    "pg": "^8.12.0",
    "pino-http": "^9.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tdigest": "^0.1.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.5.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.10",
    "@types/express": "^4.17.21",
    "@types/hbs": "^4.0.4",
    "@types/jest": "29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "18.15.3",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@types/tdigest": "^0.1.4",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  }
}
